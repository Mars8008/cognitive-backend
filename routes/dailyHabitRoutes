const express = require('express');
const router = express.Router();
const dailyHabitController = require('../controllers/dailyHabitController');

// Create
router.post('/', dailyHabitController.createHabit);

// Read
router.get('/', dailyHabitController.getHabits);
router.get('/weekly', dailyHabitController.getWeeklyStats);
router.get('/:id', dailyHabitController.getHabitById);

// Update
router.put('/:id', dailyHabitController.updateHabit);

// Delete
router.delete('/:id', dailyHabitController.deleteHabit);

module.exports = router;

